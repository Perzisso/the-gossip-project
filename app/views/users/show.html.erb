<div class="card">

  <div class="card-header">
    <%= @user.first_name %>
    <%= @user.last_name %>
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Description : <%= @user.description %></p>
      <p>Age : <%= @user.age %></p>
      <p>Email : <%= @user.email %></p>
      <p>Localisation : <%= @user.city.name %></p>
      <a href="/cities/<%= @user.city_id %>" class="btn btn-primary">Voir les gossips de la ville de <%= @user.city.name %></a>
    </blockquote>
  </div>

</div>
