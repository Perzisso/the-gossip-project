<div class="card">
  <div class="card-header">
    <%= @gossip_id.title %>
  </div>

  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @gossip_id.content %></p>
      <footer class="blockquote-footer"><%= @gossip_id.user.first_name %></cite></footer>
      <a href="/users/<%= @gossip_id.user.id %>" class="btn btn-primary">Voila les infos de <%= @gossip_id.user.first_name %></a>
      <a href="/cities/<%= @gossip_id.user.city_id %>" class="btn btn-primary">Voir les gossips de la ville</a>

    </blockquote>
  </div>

</div>